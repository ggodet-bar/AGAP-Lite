%h3
  = f.label :name, t(:name)
= f.text_field :name, :size => 60

%h3
  = f.label :short_name, t(:short_name)
  - if @noob_mode
    = link_to_function "?", "new Effect.toggle('effect_short_name', 'slide', {duration: 0.2})", :class => "question_mark"
- if @noob_mode
  #effect_short_name.helper_info{:style => "display: none"}
    %p Please define a short name for the pattern system (between 6 and 12 characters)
%p= f.text_field :short_name

%h3
  = t :updates
  - if @noob_mode
    = link_to_function "?", "new Effect.toggle('effect_update', 'slide', { duration : 0.2})", :class => "question_mark"
- if @noob_mode
  #effect_update.helper_info{:style => "display:none"}
    %p Describe the latest updates concerning your pattern system
= f.text_area :update_field, :rows => 4, :class => 'mceEditor'

%h3
  = t :characteristics
  -if @noob_mode
    = link_to_function "?", "new Effect.toggle('effect_characteristics', 'slide', { duration : 0.2})", :class => "question_mark"
- if @noob_mode
  #effect_characteristics.helper_info{:style => "display:none"}
    %p Describe the specificities of your pattern system, who it is addressed to, should it be used following specific time constraints etc.
= f.text_area :characteristics, :rows => 4, :class => 'mceEditor'

- @common_classifications.each do |common_cl|
  = render :partial => 'classification', :locals => {:f => f, :cl => common_cl, :pattern_system => @pattern_system}

- @classifications.each do |cl|
  = render :partial => 'classification', :locals => {:f => f, :cl => cl, :pattern_system => @pattern_system}

