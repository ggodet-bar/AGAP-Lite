%h3
  = t :updates
  - if @noob_mode
    = link_to_function "?", "new Effect.toggle('effect_test1', 'slide', { duration : 0.2})", :class => "question_mark"
- if @noob_mode
  %div#effect_test1.helper_info{:style => "display:none"}
    %p Describe the latest updates concerning your pattern system
= f.text_area :update_field, :rows => 4, :class => 'mceEditor'

%h3
  = t :characteristics
  -if @noob_mode
    = link_to_function "?", "new Effect.toggle('effect_test2', 'slide', { duration : 0.2})", :class => "question_mark"
- if @noob_mode
  %div#effect_test2.helper_info{:style => "display:none"}
    %p Describe the specificities of your pattern system, who it is addressed to, should it be used following specific time constraints etc.
= f.text_area :characteristics, :rows => 4, :class => 'mceEditor'

- @common_classifications.each do |common_cl|
  = render :partial => 'classification', :locals => {:f => f, :cl => common_cl, :pattern_system => @pattern_system}

- @classifications.each do |cl|
  = render :partial => 'classification', :locals => {:f => f, :cl => cl, :pattern_system => @pattern_system}

