%div{:class => 'fields'}
  %p
    = f.hidden_field :field_descriptor_id
    = f.label :name, 'Name'
    = f.text_field :name
  %p
    = f.label :description, 'Description'
    = f.text_area :description, {:class => 'mceEditor', :style => 'height: 5em; width: 40em;'}
  %p
    = f.hidden_field :_destroy
    = link_to_function 'remove', 'remove_fields(this)'
