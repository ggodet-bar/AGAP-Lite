<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= @pattern_system.name %></title>
  <%= stylesheet_link_tag 'generic', 'styles' %>
  <%= javascript_include_tag :defaults %>
  <%= include_tiny_mce_if_needed %>
</head>
<body>
<p style="color: green"><%= flash[:notice] %></p>

<%= yield  %>

<div id="patternList">
	<h3><%= t :patterns_list %></h3>
	<ul>
		<% for pattern in @patterns_list %>
		<li><%= link_to(h(pattern.name), pattern, :class  => 'crawlable') %></li>
		<% end %>
	</ul>
	<br /><br />
	<%= link_to((t :back_to_system), {:controller  => "pattern_systems", :action  => "show", :id  =>  session[:pattern_system_id]}, :class  => 'crawlable') %> 
	<br />
</div>

